<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
                android:background="@drawable/list_item_background"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:id="@+id/thumbnailImage"
        android:src="@drawable/rg"
        android:layout_height="70dp" />

    <TextView

        android:text="TextView"
        android:textSize="18dp"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/text_album"
        android:layout_toRightOf="@+id/thumbnailImage"
        android:layout_toEndOf="@+id/thumbnailImage"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/titleSong" />

    <TextView
        android:text="Artist Name "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistName"
        android:textColor="@color/secondary_text"
        android:layout_below="@+id/titleSong"
        android:layout_alignLeft="@+id/titleSong"
        android:layout_alignStart="@+id/titleSong" />

</RelativeLayout>