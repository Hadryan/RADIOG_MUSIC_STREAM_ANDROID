<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_list_artist_albm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.radiogbd.streaming.apps.mars.ListArtistAlbmActivity"
    android:background="@drawable/songlist_background"
    tools:showIn="@layout/activity_list_artist_albm">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_above="@+id/songDetailsValue"
              android:id="@+id/list_artist_grid"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:numColumns="2"
              android:verticalSpacing="15dp"
              android:horizontalSpacing="15dp"
              android:stretchMode="columnWidth"
              android:gravity="center"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"

        android:orientation="horizontal"
        android:id="@+id/songDetailsValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/footer_continer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="14sp"
                android:paddingBottom="16sp"
                android:background="#1b0205"

                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:paddingLeft="60sp"
                android:text="Hello"
                android:id="@+id/minimized_details_albumList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pll"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/play_hidden_albumlist"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
